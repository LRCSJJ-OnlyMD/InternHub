# ⚠️ IMPORTANT: Do not commit this file to Git
# Copy this file to .env.azure and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=internhub
POSTGRES_USER=internhub_user
# Generate a strong password: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
# Generate a strong password: openssl rand -base64 32
REDIS_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Generate a secure 256-bit secret: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_TO_SECURE_256_BIT_SECRET
JWT_EXPIRATION=86400000

# =============================================================================
# EMAIL CONFIGURATION (Gmail Example)
# =============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
# Your Gmail address
MAIL_USERNAME=your-email@gmail.com
# Gmail App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
MAIL_PASSWORD=CHANGE_ME_TO_GMAIL_APP_PASSWORD

# =============================================================================
# APPLICATION URLS (Update after deployment)
# =============================================================================
# Frontend URL (will be provided by Azure after deployment)
FRONTEND_URL=https://internhub-frontend.REGION.azurecontainerapps.io
# Backend URL (will be provided by Azure after deployment)
BACKEND_URL=https://internhub-backend.REGION.azurecontainerapps.io

# =============================================================================
# OPTIONAL: Azure-specific Configuration
# =============================================================================
# Resource Group Name
AZURE_RESOURCE_GROUP=internhub-rg
# Azure Region (e.g., eastus, westeurope)
AZURE_LOCATION=eastus
# Container Registry Name (must be globally unique)
AZURE_ACR_NAME=internhubacr
